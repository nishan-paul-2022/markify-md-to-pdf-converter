# App configuration
# Generate authentication secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true
AUTH_SECRET=your-authentication-secret

# Database configuration
# Format: postgresql://[USER]:[PASSWORD]@localhost:5432/[DB_NAME]?schema=public
POSTGRES_USER=markify_user
POSTGRES_PASSWORD=markify_password
POSTGRES_DB=markify_db
DATABASE_URL="postgresql://markify_user:markify_password@localhost:5432/markify_db?schema=public"

# Docker configuration
# Format: postgresql://[USER]:[PASSWORD]@db:5432/[DB_NAME]?schema=public
DOCKER_DATABASE_URL="postgresql://markify_user:markify_password@db:5432/markify_db?schema=public"
APP_CONTAINER_NAME=markify-app
DB_CONTAINER_NAME=markify-db

# Google OAuth
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# PgAdmin configuration
PGADMIN_DEFAULT_EMAIL=admin@gmail.com
PGADMIN_DEFAULT_PASSWORD=admin
