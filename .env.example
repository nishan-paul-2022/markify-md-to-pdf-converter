# App configuration
# Generate authentication secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true
AUTH_SECRET=

# Database configuration
# Format: postgresql://[USER]:[PASSWORD]@localhost:5432/[DB_NAME]?schema=public
POSTGRES_USER=markify
POSTGRES_PASSWORD=markify
POSTGRES_DB=markify
DATABASE_URL="postgresql://markify:markify@localhost:5432/markify?schema=public"

# Docker configuration
# Format: postgresql://[USER]:[PASSWORD]@db:5432/[DB_NAME]?schema=public
DOCKER_DATABASE_URL="postgresql://markify:markify@db:5432/markify?schema=public"
APP_CONTAINER_NAME=markify-app
DB_CONTAINER_NAME=markify-db

# Google OAuth
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@markify.com
PGADMIN_DEFAULT_PASSWORD=admin
